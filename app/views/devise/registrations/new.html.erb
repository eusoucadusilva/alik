<h2>Registre-se</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

	<fieldset><legend><h2>Segurança</h2></legend>
		<div class="inputs">
			<%= f.input :username,					:required => true ,:autofocus => true%>
		  	<%= f.input :email, 					:required => true %>
		    <%= f.input :password,					:required => true %>
		    <%= f.input :password_confirmation,		:required => true %>
	  	</div>
	</fieldset>
  

	<fieldset><legend><h2>Pessoal</h2></legend>
		<div class="inputs">
			<%= f.collection_select :city_id, City.all, :id, :name %>
			<%= f.input :avatar_url %>
			<%= f.input :phone %>
			<%= f.input :teaching,            :collection => 1..5 %>
			<%= f.input :professional,        :collection => 1..5 %>
			<%= f.input :books_published,     :collection => 1..5 %>
			<%= f.input :articles_published,  :collection => 1..5 %>
	  	</div>
	</fieldset>

	<fieldset><legend><h2>Experiência</h2></legend>
		<div class="inputs">

			<%= f.input :postgraduate,        :as => :check_boxes %>
			<%= f.input :doctorate_in_law,    :as => :check_boxes %>
			<%= f.input :master_of_law,       :as => :check_boxes %>

			<%= f.input :postgraduate_in_law, :as => :check_boxes %>
			<%= f.input :foreign_laguage,     :as => :check_boxes %>
			<%= f.input :terms_of_use,        :as => :check_boxes %>
	  	</div>
	</fieldset>
  
  <div class="actions">
    <%= f.button :submit, "Registrar", :class => "btn-large btn-primary" %>
  </div>


<% end %>

<%= render "links" %>
